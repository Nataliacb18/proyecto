<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/navbar.css" />
  </head>
  <body>

    <%- include('navbar') %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <h1 class="text-center">Vista de <%= resultCinephile[0].name %></h1>
        </div>
      </div>
      <main>
        <section class="row">
          <div class="col-12 d-flex justify-content-center mb-5">
            <div class="card" style="width: 18rem">
              <img
                src="/images/cinephile/<%= resultCinephile[0].cinephile_img %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= resultCinephile[0].name %></h5>
                <h5 class="card-title"><%= resultCinephile[0].last_name %></h5>
                <p><%= resultCinephile[0].cinephile_description %></p>
                <p><%= resultCinephile[0].phone_number %></p>
                <p><%= resultCinephile[0].email %></p>
              </div>
            </div>
          </div>
        </section>
        <section class="row">
          <% resultFilm.forEach(film => { %>
          <div class="col-6 text-center d-flex justify-content-center mb-5">
            <div class="card" style="width: 18rem">
              <img
                src="/images/film/<%= film.film_img %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= film.title %></h5>
                <p><%= film.film_description %></p>
              </div>
            </div>
          </div>

          <% }) %>
        </section>
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
