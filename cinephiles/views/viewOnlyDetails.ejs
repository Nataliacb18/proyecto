<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="stylesheet" href="/stylesheets/navbar.css" />
    <link rel="stylesheet" href="/stylesheets/oneCinephileDetails.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
  </head>
  <body>
    <%- include('navbar') %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-md-6">
        </div>
      </div>
      <main>
        <section class="row section5">
          <div class="col-12 col-md-6 d-flex justify-content-center">
            <div class="cinefilo-img">
              <img
                src="/images/cinephile/<%= resultCinephile[0].cinephile_img %>"
                class=""
                alt="..."
              />
            </div>
          </div>
          <div
            class="col-12 col-md-6 texto d-flex flex-column justify-content-center"
          >
            <h2 class=""><%= resultCinephile[0].name %></h2>
            <h3 class=""><%= resultCinephile[0].last_name %></h3>
            <div class="d-flex pt-5">
              <span class="material-symbols-outlined pe-2"> description </span>
              <p class="w-auto">
                <%= resultCinephile[0].cinephile_description %>
              </p>
            </div>
            <div class="d-flex">
              <span class="material-symbols-outlined pe-2"> phone_iphone </span>
              <p><%= resultCinephile[0].phone_number %></p>
            </div>
            <div class="d-flex">
              <span class="material-symbols-outlined pe-2"> contact_mail </span>
              <p><%= resultCinephile[0].email %></p>
            </div>
          </div>
          <img class="rollo" src="/images/rollo.png" alt="" />
        </section>

        <section class="row section6 p-5 d-flex justify-content-center">
          <% resultFilm.forEach(film => { %>
          <div class="col-12 col-md-6 card m-5 p-0" style="max-width: 650px">
            <div class="row g-0">
              <div class="col-md-4">
                <img
                  src="/images/film/<%= film.film_img %>"
                  class="img-fluid rounded-start"
                  alt="..."
                />
              </div>
              <div class="col-md-8 film-text">
                <div class="card-body p-4">
                  <h2 class="card-title text-center"><%= film.title %></h2>
                  <hr />
                  <div class="p-3">
                    <small class="text-secondary">Director:</small>
                  <p class="card-text"><%= film.director %></p>
                  <small class="text-secondary">Descripci√≥n:</small>
                  <p class="card-text"><%= film.film_description %></p>
                  </div>
                  
                  <div class="d-flex justify-content-end pt-4">
                    <span class="material-symbols-outlined pe-2 play">
                    play_circle
                  </span>
                  <p>Trailer</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </section>
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
