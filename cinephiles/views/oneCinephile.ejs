<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <title>Un cinéfilo</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #e4ba87a4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"
          ><img
            class="img-nav"
            src="/images/logo.jpg"
            alt=""
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#"></a>

            <a class="nav-link" href="/">Cerrar sesión</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <h1 class="text-center">Vista de <%= resultCinephile[0].name %></h1>
        </div>
      </div>
      <main>
        <section class="row">
          <div class="col-12 d-flex justify-content-center mb-5">
            <div class="card" style="width: 18rem">
              <img
                src="/images/cinephile/<%= resultCinephile[0].cinephile_img %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= resultCinephile[0].name %></h5>
                <h5 class="card-title"><%= resultCinephile[0].last_name %></h5>
                <p><%= resultCinephile[0].cinephile_description %></p>
                <p><%= resultCinephile[0].phone_number %></p>
                <p><%= resultCinephile[0].email %></p>
                <a
                  href="/cinephile/deleted/<%= resultCinephile[0].cinephile_id %>"
                  class="btn btn-warning"
                  >Eliminar</a
                >
                <a
                  href="/cinephile/edit/<%= resultCinephile[0].cinephile_id %>"
                  class="btn btn-warning"
                  >Editar</a
                >
                <a href="/film/addFilm" class="btn btn-primary">Añadir película</a>
              </div>
            </div>
          </div>
        </section>
        <section class="row">
          <% resultFilm.forEach(film => { %>
          <div class="col-6 text-center d-flex justify-content-center mb-5">
            <div class="card" style="width: 18rem">
              <img
                src="/images/film/<%= film.film_img %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= film.title %></h5>
                <p><%= film.film_description %></p>
              </div>
              <a
                href="/film/deleted/<%= film.film_id %>/<%= film.cinephile_id %>"
                class="btn btn-danger"
                >Eliminar</a
              >
              <a href="/film/edit/<%= film.film_id %>/<%= film.cinephile_id %>"
                ><button class="btn bg-warning" type="submit">editar</button>
              </a>
             
            </div>
          </div>

          <% }) %>
        </section>
      </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
